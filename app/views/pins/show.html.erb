<div class="row">
    <div class="span6 offset3">
        <div class="well">

            <div id = "container">
            <%= image_tag @pin.image %>

                <div id = "top_show">
                <%= @pin.top_text %>

                </div>
                <div id = "bottom_show">
                <%= @pin.bottom_text %>
                </div>

            </div>
            <p>
              <%= @pin.description %>
            </p>
            <p>
              <%= @pin.user.name %>
            </p>

            <div>
                <li>Liked by <%= @pin.likes.size %></li>
                <li>Hated by <%= @pin.dislikes.size %></li>
                <li><%= link_to "Like", like_pin_path(@pin) %></li>
                <li><%= link_to "Hate", dislike_pin_path(@pin) %></li>
            </div>


            <% if current_user == @pin.user %>
                <%= link_to 'Edit', edit_pin_path(@pin) %> 
            <% end %>

            <div>

            <% unless Pin.where("id > ?", @pin.id).order("id ASC").first.nil? %>
              <%= link_to "Newer", pins_path+"/"+Pin.where("id > ?", @pin.id).order("id ASC").first.id.to_s %>

            <% end %>

            <% unless Pin.where("id < ?", @pin.id).order("id ASC").last.nil? %>
              <%= link_to "Older", pins_path+"/"+Pin.where("id < ?", @pin.id).order("id ASC").last.id.to_s %>

            <% end %>
            </div>
            <%= link_to 'Back', pins_path %>
        </div>
    </div>
</div>



