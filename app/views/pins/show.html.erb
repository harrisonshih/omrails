<div class="row">
    <div class="span6 offset3">
        <div class="well">

            <div id = "container">
            <%= image_tag @pin.image %>

                <div id = "top_show">
                <%= @pin.top_text %>
                </div>
                <div id = "bottom_show">
                <%= @pin.bottom_text %>
                </div>

            </div>
            <p>
              <%= @pin.description %>
            </p>
            <p>
              <%= @pin.user.name %>
            </p>
            <% if current_user == @pin.user %>
                <%= link_to 'Edit', edit_pin_path(@pin) %> |
            <% end %>
            <%= link_to 'Back', pins_path %>
        </div>
    </div>
</div>